<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Mapper.ImageInfoMapper">
    <select id="selectByType" resultType="com.example.Entity.ImageInfo">
        SELECT
            id,
            file_name,
            type,
            related_id,
            storage_dir,
            create_time,
            update_time
        FROM image_info
        WHERE type = #{type}
        ORDER BY create_time DESC
    </select>

</mapper>